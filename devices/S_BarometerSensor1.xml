<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>
  <serviceStateTable>
      <stateVariable>
         <name>CurrentPressure</name>
         <sendEventsAttribute>yes</sendEventsAttribute>
         <dataType>i2</dataType>
        <shortCode>pressure</shortCode>
      </stateVariable>
      <stateVariable>
      	<name>Forecast</name>
      	<sendEventsAttribute>yes</sendEventsAttribute>
      	<dataType>string</dataType>
      	<shortCode>forecast</shortCode></stateVariable>
  </serviceStateTable>
  <actionList>
  	<action>
  		<name>GetCurrentPressure</name>
  		<argumentList>
  			<argument>
  				<name>PressureValue</name>
  				<direction>out</direction>
  				<relatedStateVariable>CurrentPressure</relatedStateVariable></argument></argumentList></action>
  	<action>
  		<name>GetForecast</name>
  		<argumentList>
  			<argument>
  				<name>ForecastValue</name>
  				<direction>out</direction>
  				<relatedStateVariable>Forecast</relatedStateVariable></argument></argumentList></action></actionList>
</scpd>
